import java.util.*;
public class First{
    public static void main(String args[])
    {
        Scanner sc=new Scanner(System.in);
        float a=sc.nextInt();
        float b=sc.nextInt();
        float c=sc.nextInt();
        float s=(a+b+c)/2;
        float h=s*(s-a)*(s-b)*(s-c);
        System.out.printf("%.4f",Math.sqrt(h));
    }
}
